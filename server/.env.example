# Node Environment || MAKE SURE TO SET TO 'production' IN PRODUCTION & SET APPROPRIATE CORS_ORIGIN
NODE_ENV=development
CORS_ORIGIN=*
PORT=5000

# MongoDB Connection ATLAS OR LOCAL || THIS IS A LOCAL EXAMPLE:
MONGODB_URI=mongodb://localhost:27017/staffPortal

# JWT Secret for Authentication || You should generate your own secrets for production
ACCESS_TOKEN_SECRET=??
ACCESS_TOKEN_EXPIRY=1d
REFRESH_TOKEN_SECRET=??
REFRESH_TOKEN_EXPIRY=7d

# Frontend URL (for email links and CORS)
FRONTEND_URL=http://localhost:5173

# Email Configuration
# You can use either SMTP_* or EMAIL_* variables (both are supported)
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465

# Alternative email naming (both formats supported)
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Admin email for notifications
ADMIN_EMAIL=admin@example.com
